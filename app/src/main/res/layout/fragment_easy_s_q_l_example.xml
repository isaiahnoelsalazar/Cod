    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.EasySQLExampleFragment">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
